{
    "name": "Antilapse",
    "version": "1.0.0",
    "description": "A tool to help people avoid procrastinating by reminding them of the constant, inevitable passing of time.",
    "manifest_version": 2,
    "author": "Adam Yuen",
    "permissions": ["storage", "notifications"],
    "browser_action":{
        "default_popup": "main.html",
        "default_title": "Antilapse"
    },
    "icons": {
        "1024": "logo.png"
    },
    "background": {
        "scripts": ["bg.js"],
        "persistent": false
    }
}
